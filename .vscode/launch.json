    "version": "0.2.0",
    "configurations": [

        {
            "name": "MCP Oops - Wrapped Time Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mcp-oops/src/mcp_oops/main.py",
            "console": "integratedTerminal",
            "args": [
                "stdio",
                "--mcp-transport",
                "sse",
                "uvx",
                "git+https://github.com/modelcontextprotocol/servers.git@2025.4.24#subdirectory=src/time",
                "--local-timezone=America/New_York",
            ]
        }
    ]
}