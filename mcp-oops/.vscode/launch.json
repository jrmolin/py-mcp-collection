    "version": "0.2.0",
    "configurations": [
        {
            "name": "Use Config mcp-config.yml",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_oops.main",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "args": ["config", "mcp-config.yml", "--oops-transport", "sse", ]
        },
        {
            "name": "Use stdio",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_oops.main",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "args": ["stdio", "--oops-transport", "sse", "uvx", "mcp-server-fetch"]
        }
    ]
}